# Production Database
DATABASE_URL="mysql://user:pass@host:port/dbname"

# Next Auth
AUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin Initial Credentials
ADMIN_EMAIL="admin@prosektorweb.com"
# Bcrypt hash of the admin password. Generate with: node -e "console.log(require('bcryptjs').hashSync('your_password', 10))"
ADMIN_PASSWORD_HASH="$2a$10$..." 

# Cloudflare
CLOUDFLARE_API_TOKEN="your-token-here"

# Upstash Redis
UPSTASH_REDIS_REST_URL="https://your-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token-here"

# Encryption Key: Must be a 32-byte hex string (64 characters). 
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-64-char-hex-key-here"

# Analytics Security
# HMAC secret for analytics ingestion.
ANALYTICS_SECRET="your-analytics-secret-here"
