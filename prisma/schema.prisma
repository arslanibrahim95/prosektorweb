  TEAM
  BLOG
  GENERAL
}

model MediaAsset {
  id           String        @id @default(uuid())
  companyId    String
  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  filename     String
  originalName String
  mimeType     String
  size         Int
  path         String
  url          String
  alt          String?
  category     MediaCategory @default(GENERAL)
  createdAt    DateTime      @default(now())
  blogPosts    CompanyBlogPost[]

  @@index([companyId])
  @@index([category])
}

model CompanyBlogPost {
  id              String      @id @default(uuid())
  companyId       String
  company         Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  webProjectId    String
  webProject      WebProject  @relation(fields: [webProjectId], references: [id], onDelete: Cascade)
  title           String      @db.VarChar(500)
  slug            String      @db.VarChar(500)
  excerpt         String?     @db.Text
  content         String      @db.MediumText
  coverImageId    String?
  coverImage      MediaAsset? @relation(fields: [coverImageId], references: [id], onDelete: SetNull)
