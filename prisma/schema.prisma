model SitePackage {
  id               String      @id @default(uuid())
  webProjectId     String      @unique
  webProject       WebProject  @relation(fields: [webProjectId], references: [id], onDelete: Cascade)
  tier             PackageTier @default(STARTER)
  maxRevisions     Int         @default(2)
  usedRevisions    Int         @default(0)
  maxPages         Int         @default(5)
